                "horizontalAlignment":"stretch",
                "children":[
                    {
                        "_dock":"left",
                        "type":"textblock",
                        "textBinding":{
                            "pullFormat":"${_CONTEXTITEMDATA_.Get[gameProfile]}",
                            "pullReplaceNull":""
                        },
                        "font":{
                            "bold":true
                        }                                
                    },
                    {
                        "_dock":"right",
                        "type":"textblock",
                        "textBinding":{
                            "pullFormat":"${_CONTEXTITEMDATA_.Get[game]}",
                            "pullReplaceNull":""
                        },
                        "font":{
