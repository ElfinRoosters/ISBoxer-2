{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",
    "skin":"ISBoxer 2",
    "templates": {
        "isb2.profileComplexView":{
            "jsonTemplate":"listboxitem",
            "padding":[5,2],
            "content":{
                "type":"dockpanel",
                "children":[
                    {
                        "type":"button",
                        "_dock":"right",
                        "content":"Unload",
                        "eventHandlers":{
                            "onPress":{
                                "type":"code",
                                "code":"ISB2:RemoveProfile[\"${This.Context.Data.Get[name]~}\"]"
                            }
                        }
                    },
                    {
                        "type":"button",
                        "_dock":"right",
                        "margin":[5,0],
                        "content":"Edit",
                        "eventHandlers":{
                            "onPress":{
                                "type":"code",
                                "code":"ISB2:OpenEditor[\"${This.Context.Data.Get[name]~}\"]"
                            }
                        }
                    },
                    {
                        "type":"textblock",
                        "_dock":"left",
                        "verticalAlignment":"center",
                        "textBinding":{
                            "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                            "pullReplaceNull":""
                        }
                    }        
                ]
            }
        },        
        "isb2.profileView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.characterView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.teamView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.windowLayoutView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.hotkeyView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.gameView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },        
        "isb2.gameLaunchInfoView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"dockpanel",
                "horizontalAlignment":"stretch",
                "children":[
                    {
                        "_dock":"left",
                        "type":"textblock",
                        "textBinding":{
                            "pullFormat":"${_CONTEXTITEMDATA_.Get[gameProfile]}",
                            "pullReplaceNull":""
                        },
                        "font":{
                            "bold":true
                        }                                
                    },
                    {
                        "_dock":"right",
                        "type":"textblock",
                        "textBinding":{
                            "pullFormat":"${_CONTEXTITEMDATA_.Get[game]}",
                            "pullReplaceNull":""
                        },
                        "font":{
                            "heightFactor":0.9
                        }                                
                    }
                ]
            }
        },        
        "isb2.gameKeyBindingView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.mappableSheetView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.virtualFileView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[pattern]}",
                    "pullReplaceNull":""
                }
            }
        }
    }
}