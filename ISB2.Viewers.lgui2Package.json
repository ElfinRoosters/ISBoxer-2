{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",
    "skin":"ISBoxer 2",
    "templates": {
        "isb2.profileComplexView":{
            "jsonTemplate":"listboxitem",
            "padding":[5,2],
            "content":{
                "type":"dockpanel",
                "children":[
                    {
                        "type":"button",
                        "_dock":"right",
                        "content":"Unload",
                        "eventHandlers":{
                            "onPress":{
                                "type":"code",
                                "code":"ISB2:RemoveProfile[\"${This.Context.Data.Get[name]~}\"]"
                            }
                        }
                    },
                    {
                        "type":"button",
                        "_dock":"right",
                        "margin":[5,0],
                        "content":"Edit",
                        "eventHandlers":{
                            "onPress":{
                                "type":"code",
                                "code":"ISB2:OpenEditor[\"${This.Context.Data.Get[name]~}\"]"
                            }
                        }
                    },
                    {
                        "type":"textblock",
                        "_dock":"left",
                        "verticalAlignment":"center",
                        "textBinding":{
                            "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                            "pullReplaceNull":""
                        }
                    }        
                ]
            }
        },        
        "isb2.profileView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.characterView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.teamView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.windowLayoutView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.hotkeyView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.gameView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },        
        "isb2.gameLaunchInfoView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"dockpanel",
                "horizontalAlignment":"stretch",
                "children":[
                    {
                        "_dock":"left",
                        "type":"textblock",
                        "textBinding":{
                            "pullFormat":"${_CONTEXTITEMDATA_.Get[gameProfile]}",
                            "pullReplaceNull":""
                        },
                        "font":{
                            "bold":true
                        }                                
                    },
                    {
                        "_dock":"right",
                        "type":"textblock",
                        "textBinding":{
                            "pullFormat":"${_CONTEXTITEMDATA_.Get[game]}",
                            "pullReplaceNull":""
                        },
                        "font":{
                            "heightFactor":0.9
                        }                                
                    }
                ]
            }
        },        
        "isb2.gameKeyBindingView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.mappableSheetView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2.virtualFileView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[pattern]}",
                    "pullReplaceNull":""
                }
            }
        },
        "windowLayoutEngine.regionView":{
            "jsonTemplate":"mapitemview",
            "type":"mapitemview",
            "virtualAlignment":"corner",
            "virtualSizeBinding":{
                "pullFormat":"${This.Context.Data.Get[width]},${This.Context.Data.Get[height]}"
            },
            "virtualLocationBinding":{
                "pullFormat":"${This.Context.Data.Get[x]},${This.Context.Data.Get[y]}"
            },
            "backgroundBrush":{
                "color":"#000000"
            },
            "borderThickness":[2,2,2,2],
            "borderBrush":{
                "color":"#ffffff"
            },
            "content":{
                "type":"textblock",
                "text":"${This.Context.Data.Get[numRegion]}"
            }
        },
        "windowLayoutEngine.regionView1":{
            "jsonTemplate":"windowLayoutEngine.regionView",
            "backgroundBrush":{
                "color":"#996666"
            }            
        },
        "windowLayoutEngine.regionView2":{
            "jsonTemplate":"windowLayoutEngine.regionView",
            "backgroundBrush":{
                "color":"#669966"
            }            
        },
        "windowLayoutEngine.regionView3":{
            "jsonTemplate":"windowLayoutEngine.regionView",
            "backgroundBrush":{
                "color":"#666699"
            }            
        },
        "windowLayoutEngine.regionView4":{
            "jsonTemplate":"windowLayoutEngine.regionView",
            "backgroundBrush":{
                "color":"#996699"
            }            
        },
        "windowLayoutEngine.screenView":{
            "jsonTemplate":"mapitemview",
            "type":"mapitemview",
            "virtualAlignment":"corner",
            "virtualSizeBinding":{
                "pullFormat":"${This.Context.Data.Get[width]},${This.Context.Data.Get[height]}"
            },
            "virtualLocationBinding":{
                "pullFormat":"${This.Context.Data.Get[left]},${This.Context.Data.Get[top]}"
            },
            "backgroundBrush":{
                "color":"#0000FF"
            },
            "borderThickness":[2,2,2,2],
            "borderBrush":{
                "color":"#ffffff"
            },
            "strata": 0.4
        },
        "windowLayoutEngine.layoutView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"dockpanel",
                "horizontalAlignment":"stretch",
                "children":[
                    {
                        "_dock":"left",
                        "type":"textblock",
                        "text":"Layout ${This.Context.Index}: ${This.Context.Data.Get[name]}",
                        "minSize":[120,0]
                    },
                    {
                        "_dock":"right",
                        "type":"map",
                        "-width":400,
                        "horizontalAlignment":"stretch",
                        "height":100,
                        "fixedAspectRatio":true,
                        "virtualLocation":[0,0],
                        "virtualSize":[1920,1080],
                        "virtualAlignment":"corner",
                        "content":{
                            "jsonTemplate":"map.content",
                            "backgroundBrush":{
                                "color":"#222222"
                            }    
                        },
                        "itemsBinding":{
                            "pullFormat":"${ISB2QuickSetup.GetLayoutPreviewItems[${This.Context.Index},${This.ID}]}"
                        },
                        "itemViewGenerators":{
                            "screen":{
                                "type":"template",
                                "template":"windowLayoutEngine.screenView"
                            },
                            "region":{
                                "type":"template",
                                "template":"windowLayoutEngine.regionView"
                            },
                            "region1":{
                                "type":"template",
                                "template":"windowLayoutEngine.regionView1"
                            },
                            "region2":{
                                "type":"template",
                                "template":"windowLayoutEngine.regionView2"
                            },
                            "region3":{
                                "type":"template",
                                "template":"windowLayoutEngine.regionView3"
                            },
                            "region4":{
                                "type":"template",
                                "template":"windowLayoutEngine.regionView4"
                            }
                        }
                    }
                ]
            }
        }
    }
}