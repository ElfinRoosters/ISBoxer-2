{
    "$schema": "http://www.lavishsoft.com/schema/isb2.json",
    "name": "ISBoxer Per-Window",
    "builders":[
        {
            "name":"Per-Slot Master Switching",
            "description": "For non-broadcasting games, enables Follow, Assist, Targeting and Interact mechanics",
            "hotkeys":[
                {
                    "sheet": "ISBPW - Base Hotkeys",
                    "name": "Set Master",
                    "keyCombo":"Alt+M"
                },
                {
                    "sheet": "ISBPW - Base Hotkeys",
                    "name": "Interact"
                },
                {
                    "sheet": "ISBPW - Base Hotkeys",
                    "name": "Follow Master"                
                },
                {
                    "sheet": "ISBPW - Base Hotkeys",
                    "name": "Assist Master"                
                }                                
            ],
            "gameKeyBindings": [
                {
                    "name": "Follow Slot {SLOT}"
                },
                {
                    "name": "Assist Slot {SLOT}"
                },
                {
                    "name": "Target Slot {SLOT}"
                },
                {
                    "name":"Interact with Target"
                }
            ]        
        },
        {
            "name":"Combat Hotkeys 1 through =",
            "description": "For non-broadcasting games, enables basic combat hotkeys",
            "team":{
                "slots": [
                    {
                        "switchToCombo":"Ctrl+Alt+1"
                    },
                    {
                        "switchToCombo":"Ctrl+Alt+2"
                    },
                    {
                        "switchToCombo":"Ctrl+Alt+3"
                    },
                    {
                        "switchToCombo":"Ctrl+Alt+4"
                    },
                    {
                        "switchToCombo":"Ctrl+Alt+5"
                    },
                    {
                        "switchToCombo":"Ctrl+Alt+6"
                    },
                    {
                        "switchToCombo":"Ctrl+Alt+7"
                    },
                    {
                        "switchToCombo":"Ctrl+Alt+8"
                    },
                    {
                        "switchToCombo":"Ctrl+Alt+9"
                    },
                    {
                        "switchToCombo":"Ctrl+Alt+0"
                    },
                    {
                        "switchToCombo":"Ctrl+Alt+-"
                    },
                    {
                        "switchToCombo":"Ctrl+Alt+="
                    }
                ]
            },
            "character":{
                "virtualFiles": [
                    {
                        "pattern": "*/Config.WTF",
                        "replacement": "{0}/Config-{CHARACTER}.WTF"
                    }
                ]
            },
            "slot":{
                "windowTitle": "{CHARACTER}"            
            }
        }
    ],
    "hotkeySheets": [
        {
            "name": "Base Hotkeys",
            "enable": true,
            "hotkeys": [
                {
                    "name": "Follow Me",
                    "keyCombo": "Alt+F",
                    "inputMapping": {
                        "type": "mappable",
                        "sheet": "Base Hotkeys",
                        "name": "Follow Me"
                    }
                }
            ]
        }
    ],
        "mappableSheets":[
        {
            "name":"Always On",
            "mappables":[
