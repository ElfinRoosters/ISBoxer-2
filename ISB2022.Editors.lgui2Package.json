{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",
    "skin":"ISBoxer 2022",
    "templates": {
        "isb2022.draggerWidths":{
            "default":200,
            "isb2022.characterEditor":200,
            "isb2022.teamEditor":200,
            "isb2022.keyLayoutEditor":200
        },
        "isb2022.leftPane":{
            "_dock":"left",
            "_pane":"default",
            "type":"dragger",
            "width":200,
            "allowMove":false,
            "allowResize":true,
            "borderThickness":[0,0,5,0],
            "borderBrush":{"color":[0.5,0.5,0.5]},
            "eventHandlers":{
                "onVisualAttached":{
                    "type":"code",
                    "code":"This:SetSize[${LGUI2.Template[isb2022.draggerWidths].Get[${This.Metadata.Get[pane]}]},-1]"
                },
                "lostMouseCapture":{
                    "type":"code",
                    "code":"LGUI2.Skin[default].Template[isb2022.draggerWidths]:Set[${This.Metadata.Get[pane]},${This.Width}]"
                }
            }
        },
        "isb2022.characterEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "jsonTemplate":"isb2022.leftPane",
                    "_pane":"isb2022.characterEditor",
                    "content":{
                        "type":"treepanel",
                        "verticalAlignment":"stretch",
                        "horizontalAlignment":"stretch"
                    }        
                },
                {
                    "_dock":"top",
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[name]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[name,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Actual Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[actualName]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[actualName,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        }
                    ]
                }
            ]
        },
        "isb2022.teamEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "jsonTemplate":"isb2022.leftPane",
                    "_pane":"isb2022.teamEditor",
                    "content":{
                        "type":"treepanel",
                        "verticalAlignment":"stretch",
                        "horizontalAlignment":"stretch"
                    }        
                },
                {
                    "_dock":"top",
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[name]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[name,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        }
                    ]
                }
            ]
        },
        "isb2022.keyLayoutEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "jsonTemplate":"isb2022.leftPane",
                    "_pane":"isb2022.keyLayoutEditor",
                    "content":{
                        "type":"treepanel",
                        "verticalAlignment":"stretch",
                        "horizontalAlignment":"stretch"
                    }        
                },
                {
                    "_dock":"top",
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[name]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[name,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        }
                    ]
                }
            ]
        },
        "isb2022.hotkeyEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[name]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[name,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Key Combo",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[keyCombo]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[keyCombo,\"","\"]"]
                            },
                            "editTemplate":"propertyview.inputCombo"                            
                        }
                    ]
                }
            ]
        },
        "isb2022.gameKeyBindingEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[name]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[name,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Key Combo",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[keyCombo]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[keyCombo,\"","\"]"]
                            },
                            "editTemplate":"propertyview.inputCombo"                            
                        }
                    ]
                }
            ]
        },
        "isb2022.virtualFileEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Pattern",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[pattern]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[pattern,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Replacement",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[replacement]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[replacement,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        }
                    ]
                }
            ]
        },
        "isb2022.profileEditor":{
            "type":"window",
            "jsonTemplate":"window",
            "title":"ISBoxer Profile: ${This.Context.Editing.Name}",
            "visibility":"visible",
            "width":750,
            "height":400,
            "minSize":[600,300],
            "content":{
                "type":"dockpanel",
                "horizontalAlignment": "stretch",
                "verticalAlignment": "stretch",
                "children":[
                    {
                        "type":"scrollviewer",
                        "_dock":"top",
                        "horizontalAlignment": "stretch",
                        "verticalScroll": "fit",
                        "heightFactor":0.4,
                        "content":{
                            "type":"stackpanel",
                            "orientation": "horizontal",
                            "verticalContentAlignment":"stretch",
                            "children":[
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Characters"
                                        },
                                        {
                                            "type":"listbox",
                                            "name":"profile.characters",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.Characters}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.characterView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnCharacterSelected"
                                                }
                                            }
                                        }        
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Teams"
                                        },
                                        {
                                            "type":"listbox",
                                            "name":"profile.teams",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.Teams}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.teamView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnTeamSelected"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Key Layouts"
                                        },
                                        {
                                            "type":"listbox",
                                            "name":"profile.keyLayouts",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.KeyLayouts}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.keyLayoutView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnKeyLayoutSelected"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Game Key Bindings"
                                        },
                                        {
                                            "type":"listbox",
                                            "name":"profile.gameKeyBindings",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.GameKeyBindings}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.gameKeyBindingView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnGameKeyBindingSelected"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",                                    
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Window Layouts"
                                        },
                                        {
                                            "type":"listbox",
                                            "name":"profile.windowLayouts",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.WindowLayouts}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.windowLayoutView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnWindowLayoutSelected"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Virtual Files"
                                        },
                                        {
                                            "type":"listbox",
                                            "name":"profile.virtualFiles",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.VirtualFiles}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.virtualFileView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnVirtualFileSelected"
                                                }
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    },
                    {
                        "type":"border",
                        "_dock":"bottom",
                        "name":"profile.editorContainer",
                        "horizontalAlignment":"stretch",
                        "verticalAlignment":"stretch",
                        "margin":2,
                        "borderThickness":1,
                        "borderBrush":{
                            "color":"#ff7f7f7f"
                        }
                    }
                ]
            }
        }
    }
}