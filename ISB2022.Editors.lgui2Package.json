{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",
    "skin":"ISBoxer 2022",
    "templates": {
        "isb2022.virtualFileEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Pattern",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[pattern]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:Set[-lazy,pattern,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Replacement",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[replacement]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:Set[-lazy,replacement,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        }
                    ]
                }
            ]
        },
        "isb2022.profileEditor":{
            "type":"window",
            "jsonTemplate":"window",
            "title":"ISBoxer Profile: ${This.Context.Editing.Name}",
            "visibility":"visible",
            "width":750,
            "height":400,
            "minSize":[600,300],
            "content":{
                "type":"dockpanel",
                "horizontalAlignment": "stretch",
                "verticalAlignment": "stretch",
                "children":[
                    {
                        "type":"scrollviewer",
                        "_dock":"top",
                        "horizontalAlignment": "stretch",
                        "verticalScroll": "fit",
                        "heightFactor":0.4,
                        "content":{
                            "type":"stackpanel",
                            "orientation": "horizontal",
                            "verticalContentAlignment":"stretch",
                            "children":[
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Characters"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.Characters}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.characterView"
                                                }
                                            }
                                        }        
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Teams"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.Teams}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.teamView"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Key Layouts"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.KeyLayouts}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.keyLayoutView"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Game Key Bindings"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.GameKeyBindings}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.gameKeyBindingView"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Window Layouts"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.WindowLayouts}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.windowLayoutView"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Virtual Files"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.VirtualFiles}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.virtualFileView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onSelectionChanged":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnVirtualFileSelected"
                                                }
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    },
                    {
                        "type":"border",
                        "_dock":"bottom",
                        "name":"profile.editorContainer",
                        "horizontalAlignment":"stretch",
                        "verticalAlignment":"stretch",
                        "margin":2,
                        "borderThickness":1,
                        "borderBrush":{
                            "color":"#ff7f7f7f"
                        }
                    }
                ]
            }
        }
    }
}