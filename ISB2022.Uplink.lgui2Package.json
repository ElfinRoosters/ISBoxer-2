{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",    
    "includes": ["ISB2022.Skin.lgui2Package.json"],
    "skin":"ISBoxer 2022",
    "templates": {
        "isb2022.profileView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2022.profileEditor":{
            "type":"window",
            "jsonTemplate":"window",
            "title":"${This.Context.Editing.Name}",
            "visibility":"visible",
            "width":750,
            "height":400,
            "minSize":[600,300]
        }
    },
    "elements": [
        {
            "type": "panel",
            "visibility": "hidden",
            "name": "isb2022.events"
        },
        {
            "type":"window",
            "name":"isb2022.MainWindow",
            "hideOnClose":true,
            "title":"ISBoxer 2022",
            "width":750,
            "height":400,
            "minSize":[600,300],
            "horizontalAlignment":"center",
            "verticalAlignment":"center",
            "visibility": "visible",
            "content":{
                "type":"dockpanel",
                "horizontalAlignment": "stretch",
                "verticalAlignment": "stretch",
                "children":[
                    {
                        "type":"dockpanel",
                        "_dock":"bottom",
                        "horizontalAlignment": "stretch",
                        "children":[
                            {
                                "type":"button",
                                "content":"Reload Agent",
                                "_dock": "right",
                                "eventHandlers": {
                                    "onPress":{
                                        "type":"code",
                                        "code":"InnerSpace.Agent[ISBoxer 2022]:Stop:Start"
                                    }
                                }
                            },
                            {
                                "type":"button",
                                "content":"Load Tests",
                                "_dock": "right",
                                "margin":[0,0,5,0],
                                "eventHandlers": {
                                    "onPress":{
                                        "type":"code",
                                        "code":"ISB2022:LoadTests"
                                    }
                                }
                            }
                        ]
                    },
                    {
                        "type":"tabcontrol",
                        "_dock":"top",
                        "horizontalAlignment":"stretch",
                        "tabs":[
                            {
                                "type":"tab",
                                "header":"Launcher",
                                "content":{
                                    "type":"dockpanel",
                                    "horizontalAlignment": "stretch",
                                    "verticalAlignment": "stretch"                    
                                }                                
                            },
                            {
                                "type":"tab",
                                "header":"Profiles",
                                "content":{
                                    "type":"dockpanel",
                                    "horizontalAlignment": "stretch",
                                    "verticalAlignment": "stretch",
                                    "children":[
                                        {
                                            "type":"listbox",
                                            "_dock":"top",
                                            "horizontalAlignment": "stretch",
                                            "verticalAlignment": "stretch",
                                            "itemsBinding":{
                                                "pullFormat": "${ISB2022.Profiles.AsJSON[array]}",
                                                "pullHook": {
                                                    "elementName": "isb2022.events",
                                                    "flags": "global",
                                                    "event": "onProfilesUpdated"
                                                }
                                            },
                                            "selectedItemBinding":{
                                                "pullFormat":"${ISB2022.SelectedProfile.Name}",
                                                "pushFormat":["ISB2022:SelectProfile[\"","\"]"]
                                            },
                                            "selectedItemBindingProperty":"name",
                                            "itemViewGenerators":{
                                                "default":{
                                                  "type":"template",
                                                  "template":"isb2022.profileView"
                                                }
                                            }
                                        }
                                    ]
                                }                                
                            }                                                        
                        ]
                    }
                ]
            }
        }
    ]
}