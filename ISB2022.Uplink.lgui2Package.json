{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",    
    "includes": ["ISB2022.Skin.lgui2Package.json"],
    "skin":"ISBoxer 2022",
    "templates": {
        "isb2022.profileView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2022.characterView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2022.teamView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2022.windowLayoutView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2022.hotkeyView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2022.gameKeyBindingView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2022.keyLayoutView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2022.virtualFileView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"textblock",
                "textBinding":{
                    "pullFormat":"${_CONTEXTITEMDATA_.Get[pattern]}",
                    "pullReplaceNull":""
                }
            }
        },
        "isb2022.virtualFileEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Pattern",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[pattern]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:Set[-lazy,pattern,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Replacement",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[replacement]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:Set[-lazy,replacement,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        }
                    ]
                }
            ]
        },
        "isb2022.profileEditor":{
            "type":"window",
            "jsonTemplate":"window",
            "title":"ISBoxer Profile: ${This.Context.Editing.Name}",
            "visibility":"visible",
            "width":750,
            "height":400,
            "minSize":[600,300],
            "content":{
                "type":"dockpanel",
                "horizontalAlignment": "stretch",
                "verticalAlignment": "stretch",
                "children":[
                    {
                        "type":"scrollviewer",
                        "_dock":"top",
                        "horizontalAlignment": "stretch",
                        "verticalScroll": "fit",
                        "heightFactor":0.4,
                        "content":{
                            "type":"stackpanel",
                            "orientation": "horizontal",
                            "verticalContentAlignment":"stretch",
                            "children":[
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Characters"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.Characters}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.characterView"
                                                }
                                            }
                                        }        
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Teams"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.Teams}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.teamView"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Key Layouts"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.KeyLayouts}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.keyLayoutView"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Game Key Bindings"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.GameKeyBindings}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.gameKeyBindingView"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Window Layouts"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.WindowLayouts}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.windowLayoutView"
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type":"stackpanel",
                                    "orientation":"vertical",
                                    "margin":[0,0,5,0],
                                    "children":[
                                        {
                                            "type":"textblock",
                                            "text":"Virtual Files"
                                        },
                                        {
                                            "type":"listbox",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.VirtualFiles}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2022.virtualFileView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onSelectionChanged":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnVirtualFileSelected"
                                                }
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    },
                    {
                        "type":"border",
                        "_dock":"bottom",
                        "name":"profile.editorContainer",
                        "horizontalAlignment":"stretch",
                        "verticalAlignment":"stretch",
                        "margin":2,
                        "borderThickness":1,
                        "borderBrush":{
                            "color":"#ff7f7f7f"
                        }
                    }
                ]
            }
        }
    },
    "elements": [
        {
            "type": "panel",
            "visibility": "hidden",
            "name": "isb2022.events"
        },
        {
            "type":"window",
            "name":"isb2022.MainWindow",
            "hideOnClose":true,
            "title":"ISBoxer 2022",
            "width":750,
            "height":400,
            "minSize":[600,300],
            "horizontalAlignment":"center",
            "verticalAlignment":"center",
            "visibility": "visible",
            "content":{
                "type":"dockpanel",
                "horizontalAlignment": "stretch",
                "verticalAlignment": "stretch",
                "children":[
                    {
                        "type":"dockpanel",
                        "_dock":"bottom",
                        "horizontalAlignment": "stretch",
                        "children":[
                            {
                                "type":"button",
                                "content":"Reload Agent",
                                "_dock": "right",
                                "eventHandlers": {
                                    "onPress":{
                                        "type":"code",
                                        "code":"InnerSpace.Agent[ISBoxer 2022]:Stop:Start"
                                    }
                                }
                            },
                            {
                                "type":"button",
                                "content":"Load Tests",
                                "_dock": "right",
                                "margin":[0,0,5,0],
                                "eventHandlers": {
                                    "onPress":{
                                        "type":"code",
                                        "code":"ISB2022:LoadTests"
                                    }
                                }
                            }
                        ]
                    },
                    {
                        "type":"tabcontrol",
                        "_dock":"top",
                        "horizontalAlignment":"stretch",
                        "tabs":[
                            {
                                "type":"tab",
                                "header":"Launcher",
                                "content":{
                                    "type":"dockpanel",
                                    "horizontalAlignment": "stretch",
                                    "verticalAlignment": "stretch"                    
                                }                                
                            },
                            {
                                "type":"tab",
                                "header":"Profiles",
                                "content":{
                                    "type":"dockpanel",
                                    "horizontalAlignment": "stretch",
                                    "verticalAlignment": "stretch",
                                    "children":[
                                        {
                                            "type":"dockpanel",
                                            "_dock":"right",
                                            "verticalAlignment":"stretch",
                                            "margin":[5,0,0,0],
                                            "children":[
                                                {
                                                    "type":"button",
                                                    "_dock":"top",
                                                    "content":"Edit",
                                                    "eventHandlers":{
                                                        "onPress":{
                                                            "type":"code",
                                                            "code":"ISB2022:OpenEditor[\"${ISB2022.SelectedProfile.Name~}\"]"
                                                        }
                                                    }
                                                }
                                            ]
                                        },
                                        {
                                            "type":"listbox",
                                            "_dock":"left",
                                            "horizontalAlignment": "stretch",
                                            "verticalAlignment": "stretch",
                                            "itemsBinding":{
                                                "pullFormat": "${ISB2022.Profiles.AsJSON[array]}",
                                                "pullHook": {
                                                    "elementName": "isb2022.events",
                                                    "flags": "global",
                                                    "event": "onProfilesUpdated"
                                                }
                                            },
                                            "selectedItemBinding":{
                                                "pullFormat":"${ISB2022.SelectedProfile.Name}",
                                                "pushFormat":["ISB2022:SelectProfile[\"","\"]"]
                                            },
                                            "selectedItemBindingProperty":"name",
                                            "itemViewGenerators":{
                                                "default":{
                                                  "type":"template",
                                                  "template":"isb2022.profileView"
                                                }
                                            }
                                        }
                                    ]
                                }                                
                            }                                                        
                        ]
                    }
                ]
            }
        }
    ]
}