{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",
    "skin":"ISBoxer 2",
    "templates": {
        "isb2.draggerWidths":{
            "default":200,
            "isb2.characterEditor":200,
            "isb2.main":200,
            "isb2.teamEditor":200,
            "isb2.mappableSheetEditor":200
        },
        "isb2.leftPane":{
            "_dock":"left",
            "_pane":"default",
            "type":"dragger",
            "width":200,
            "verticalAlignment":"stretch",
            "allowMove":false,
            "allowResize":true,
            "borderThickness":[0,0,5,0],
            "borderBrush":{"color":[0.5,0.5,0.5]},
            "eventHandlers":{
                "onVisualAttached":{
                    "type":"code",
                    "code":"This:SetSize[${LGUI2.Template[isb2.draggerWidths].Get[\"${This.Metadata.Get[pane]~}\"]},-1]"
                },
                "lostMouseCapture":{
                    "type":"code",
                    "code":"LGUI2.Skin[default].Template[isb2.draggerWidths]:Set[\"${This.Metadata.Get[pane]~}\",${This.Width}]"
                }
            }
        },
        "isb2.topPane":{
            "_dock":"left",
            "_pane":"default",
            "type":"dragger",
            "width":200,
            "verticalAlignment":"stretch",
            "allowMove":false,
            "allowResize":true,
            "borderThickness":[0,0,5,0],
            "borderBrush":{"color":[0.5,0.5,0.5]},
            "eventHandlers":{
                "onVisualAttached":{
                    "type":"code",
                    "code":"This:SetSize[-1,${LGUI2.Template[isb2.draggerHeights].Get[\"${This.Metadata.Get[pane]~}\"]}]"
                },
                "lostMouseCapture":{
                    "type":"code",
                    "code":"LGUI2.Skin[default].Template[isb2.draggerHeights]:Set[\"${This.Metadata.Get[pane]~}\",${This.Height}]"
                }
            }
        },
        "isb2.leftPaneExpander":{
            "jsonTemplate":"expander",
            "type":"expander",
            "horizontalAlignment":"stretch",
            "margin":3
        },
        "isb2.leftPaneList":{
            "jsonTemplate":"listbox",
            "type":"listbox",
            "horizontalAlignment":"stretch",
            "margin":3,
            "borderThickness":[0,0,0,1]
        },
        "isb2.characterEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "jsonTemplate":"isb2.leftPane",
                    "_pane":"isb2.characterEditor",
                    "content":{
                        "type":"listbox",
                        "jsonTemplate":"isb2.leftPaneList",
                        "verticalAlignment":"stretch",
                        "horizontalAlignment":"stretch",
                        "items":[
                            "General",
                            "Game Launch Info"
                        ]
                    }        
                },
                {
                    "_dock":"top",
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[name]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[name,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Actual Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[actualName]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[actualName,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Account Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[accountName]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[accountName,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Email",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[email]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[email,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Server",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[gameServer]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[gameServer,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Game",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[game]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[game,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Clip cursor to window",
                            "dataBinding":{
                                "pullFormat":"${This.Object.GetBool[clipCursor]}",
                                "pushFormat":["This.Object:SetBool[clipCursor,\"","\"]"],
                                "pushNullFormat":"This.Object:Erase[clipCursor]"
                            },
                            "editTemplate":"propertyview.checkbox",
                            "controlData":{
                                "tooltip":"Enabling this feature will generally lock the cursor into the window",
                                "useIndeterminate":true,
                                "pushAsBool":true
                            }
                        },
                        {
                            "name":"VFX Viewers are Permanent",
                            "dataBinding":{
                                "pullFormat":"${This.Object.GetBool[vfxViewersPermanent]}",
                                "pushFormat":["This.Object:SetBool[vfxViewersPermanent,\"","\"]"],
                                "pushNullFormat":"This.Object:Erase[vfxViewersPermanent]"
                            },
                            "editTemplate":"propertyview.checkbox",
                            "controlData":{
                                "tooltip":"Enabling this feature will block VFX Sources from the Character's window",
                                "useIndeterminate":true,
                                "pushAsBool":true
                            }
                        },
                        {
                            "name":"Mute Broadcasts",
                            "dataBinding":{
                                "pullFormat":"${This.Object.GetBool[muteBroadcasts]}",
                                "pushFormat":["This.Object:SetBool[muteBroadcasts,\"","\"]"],
                                "pushNullFormat":"This.Object:Erase[muteBroadcasts]"
                            },
                            "editTemplate":"propertyview.checkbox",
                            "controlData":{
                                "tooltip":"Enabling this feature will prevent broadcast inputs from reaching the window",
                                "useIndeterminate":true,
                                "pushAsBool":true
                            }
                        }
                    ]
                }
            ]
        },
        "isb2.teamEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "jsonTemplate":"isb2.leftPane",
                    "_pane":"isb2.teamEditor",
                    "content":{
                        "type":"listbox",
                        "jsonTemplate":"isb2.leftPaneList",
                        "verticalAlignment":"stretch",
                        "horizontalAlignment":"stretch",
                        "contentContainer":{
                            "jsonTemplate":"listbox.contentContainerFitWidth"
                        },
                        "items":[
                            {
                                "type":"textblock",
                                "text":"General"
                            },
                            {
                                "type":"expander",
                                "header":"Slots",
                                "content":{
                                    "margin":[20,0,0,0],
                                    "type":"listbox",
                                    "borderThickness":0,
                                    "contentContainer":{
                                        "jsonTemplate":"listbox.contentContainerFitWidth"
                                    },
                                    "horizontalAlignment":"stretch",
                                    "itemsBinding":{
                                        "pullFormat": "${This.Locate[\"\",listbox,ancestor].Context.Get[slots]}"
                                    },
                                    "itemViewGenerators":{
                                        "default":{
                                            "type":"template",
                                            "template":"isb2.slotView"
                                        }
                                    }
                                }
                            },
                            {
                                "type":"textblock",
                                "text":"Configuration Builders"
                            }
                        ]
                    }        
                },
                {
                    "_dock":"top",
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[name]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[name,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"GUI Toggle Hotkey",
                            "dataBinding":{
                                "pullFormat":"${This.Object.Get[guiToggleCombo]}",
                                "pushFormat":["This.Object:SetString[guiToggleCombo,\"","\"]"],
                                "pushNullFormat":["This.Object:Erase[guiToggleCombo]"]
                            },
                            "editTemplate":"propertyview.inputCombo"
                        },
                        {
                            "name":"Window Layout",
                            "dataBinding":{
                                "pullFormat":"${This.Object.Get[windowLayout]}",
                                "pullReplaceNull":"",
                                "pushFormat":["This.Object:SetString[windowLayout,\"","\"]"]
                              },
                              "editTemplate":"propertyview.textbox"                              
                        }
                    ]
                }
            ]
        },
        "isb2.mappableSheetEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "jsonTemplate":"isb2.leftPane",
                    "_pane":"isb2.mappableSheetEditor",
                    "content":{
                        "type":"treepanel",
                        "verticalAlignment":"stretch",
                        "horizontalAlignment":"stretch"
                    }        
                },
                {
                    "_dock":"top",
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[name]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[name,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        }
                    ]
                }
            ]
        },
        "isb2.missingEditor":{
            "type":"dockpanel",
            "padding":5,
            "jsonTemplate":"dockpanel",
            "verticalAlignment":"stretch",
            "horizontalAlignment":"stretch",
            "children":[
                {
                    "type":"textblock",
                    "text":"Editor Missing",
                    "_dock":"top"
                },
                {
                    "type":"textbox",
                    "_dock":"top",
                    "horizontalAlignment":"stretch",
                    "verticalAlignment":"stretch",
                    "textBinding":{
                        "pullFormat":"${This.Context.AsJSON[multiline]}"
                    }
                }
            ]
        },
        "isb2.hotkeyEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[name]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[name,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Key Combo",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[keyCombo]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[keyCombo,\"","\"]"]
                            },
                            "editTemplate":"propertyview.inputCombo"                            
                        }
                    ]
                }
            ]
        },
        "isb2.gameKeyBindingEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Name",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[name]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[name,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Key Combo",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[keyCombo]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[keyCombo,\"","\"]"]
                            },
                            "editTemplate":"propertyview.inputCombo"                            
                        }
                    ]
                }
            ]
        },
        "isb2.virtualFileEditor":{
            "type":"dockpanel",
            "jsonTemplate":"dockpanel",
            "children":[
                {
                    "type":"objectview",
                    "verticalAlignment":"stretch",
                    "horizontalAlignment":"stretch",
                    "objectBinding":{
                      "pullFormat":"${This.Context}",
                      "pullOnce":true
                    },
                    "properties":[
                        {
                            "name":"Pattern",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[pattern]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[pattern,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        },
                        {
                            "name":"Replacement",
                            "dataBinding":{
                              "pullFormat":"${This.Object.Get[replacement]}",
                              "pullReplaceNull":"",
                              "pushFormat":["This.Object:SetString[replacement,\"","\"]"]
                            },
                            "editTemplate":"propertyview.textbox"                            
                        }
                    ]
                }
            ]
        },
        "isb2.profileEditor":{
            "type":"window",
            "jsonTemplate":"window",
            "title":"ISBoxer Profile: ${This.Context.Editing.Name}",
            "visibility":"visible",
            "width":750,
            "height":400,
            "minSize":[600,300],
            "eventHandlers":{
                "onVisualDetached":{
                    "type":"method",
                    "object":"This.Context",
                    "method":"OnWindowClosed"
                }        
            },
            "content":{
                "type":"dockpanel",
                "horizontalAlignment": "stretch",
                "verticalAlignment": "stretch",
                "children":[
                    {
                        "jsonTemplate":"isb2.leftPane",
                        "_pane":"isb2.main",
                        "content":{
                            "type":"scrollviewer",
                            "horizontalAlignment":"stretch",
                            "verticalAlignment":"stretch",
                            "horizontalScroll":"fitparent",
                            "content":{
                                "type":"stackpanel",
                                "orientation":"vertical",
                                "uniform":true,
                                "children":[
                                    {
                                        "jsonTemplate":"isb2.leftPaneExpander",
                                        "type":"expander",
                                        "header":"Characters",
                                        "content":{
                                            "type":"listbox",
                                            "jsonTemplate":"isb2.leftPaneList",
                                            "name":"profile.characters",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.Characters}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2.characterView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnLeftPaneSelection",
                                                    "args":["Character"]
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "jsonTemplate":"isb2.leftPaneExpander",
                                        "type":"expander",
                                        "header":"Teams",
                                        "content":                                    
                                        {
                                            "type":"listbox",
                                            "name":"profile.teams",
                                            "jsonTemplate":"isb2.leftPaneList",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.Teams}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2.teamView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnLeftPaneSelection",
                                                    "args":["Team"]
                                                }
                                            }
                                        }        
                                    },
                                    {
                                        "jsonTemplate":"isb2.leftPaneExpander",
                                        "type":"expander",
                                        "header":"Hotkey Sheets",
                                        "content":{
                                            "jsonTemplate":"isb2.leftPaneList",
                                            "type":"listbox",
                                            "name":"profile.hotkeySheets",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.HotkeySheets}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2.hotkeySheetView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnLeftPaneSelection",
                                                    "args":["HotkeySheet"]
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "jsonTemplate":"isb2.leftPaneExpander",
                                        "type":"expander",
                                        "header":"Mappable Sheets",
                                        "content":{
                                            "jsonTemplate":"isb2.leftPaneList",
                                            "type":"listbox",
                                            "name":"profile.mappableSheets",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.MappableSheets}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2.mappableSheetView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnLeftPaneSelection",
                                                    "args":["MappableSheet"]
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "jsonTemplate":"isb2.leftPaneExpander",
                                        "type":"expander",
                                        "header":"Game Key Bindings",
                                        "content":{
                                            "jsonTemplate":"isb2.leftPaneList",
                                            "type":"listbox",
                                            "name":"profile.gameKeyBindings",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.GameKeyBindings}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2.gameKeyBindingView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnLeftPaneSelection",
                                                    "args":["GameKeyBinding"]
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "jsonTemplate":"isb2.leftPaneExpander",
                                        "type":"expander",
                                        "header":"Window Layouts",
                                        "content":{
                                            "jsonTemplate":"isb2.leftPaneList",
                                            "type":"listbox",
                                            "name":"profile.windowLayouts",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.WindowLayouts}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2.windowLayoutView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnLeftPaneSelection",
                                                    "args":["WindowLayout"]
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "jsonTemplate":"isb2.leftPaneExpander",
                                        "type":"expander",
                                        "header":"Virtual Files",
                                        "content":{
                                            "jsonTemplate":"isb2.leftPaneList",
                                            "type":"listbox",
                                            "name":"profile.virtualFiles",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.VirtualFiles}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2.virtualFileView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnLeftPaneSelection",
                                                    "args":["VirtualFile"]
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "jsonTemplate":"isb2.leftPaneExpander",
                                        "type":"expander",
                                        "header":"VFX Sheets",
                                        "content":{
                                            "jsonTemplate":"isb2.leftPaneList",
                                            "type":"listbox",
                                            "name":"profile.vfxSheets",
                                            "itemsBinding":{
                                                "pullFormat": "${This.Context.Editing.VFXSheets}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"isb2.vfxSheetView"
                                                }
                                            },
                                            "eventHandlers":{
                                                "onItemSelected":{
                                                    "type":"method",
                                                    "object":"This.Context",
                                                    "method":"OnLeftPaneSelection",
                                                    "args":["VFXSheet"]
                                                }
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "type":"border",
                        "_dock":"right",
                        "name":"profile.editorContainer",
                        "horizontalAlignment":"stretch",
                        "verticalAlignment":"stretch",
                        "contextBinding":{
                            "pullFormat":"${This.Parent.Context.EditingItem}"
                        },
                        "margin":2,
                        "borderThickness":1,
                        "borderBrush":{
                            "color":"#ff7f7f7f"
                        }
                    }
                ]
            }
        }
    }
}